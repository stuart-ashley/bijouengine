#extension GL_EXT_geometry_shader4 : enable
//----------------------------------------------------------------------------
// Input: GL_LINES
// Output: GL_LINE_STRIP
//----------------------------------------------------------------------------
// uniforms
//----------------------------------------------------------------------------
uniform vec4 u_color0;
uniform vec4 u_color1;
//----------------------------------------------------------------------------
// varying
//----------------------------------------------------------------------------
varying out vec4 v_color;
//----------------------------------------------------------------------------
void main() {
	gl_Position = gl_PositionIn[ 0 ];
	v_color = u_color0;
	EmitVertex();

	gl_Position = gl_PositionIn[ 1 ];
	v_color = u_color1;
	EmitVertex();

	EndPrimitive();
}
//----------------------------------------------------------------------------

