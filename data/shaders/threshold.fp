//----------------------------------------------------------------------------
// varying
//----------------------------------------------------------------------------
varying vec2 v_uv;
//----------------------------------------------------------------------------
// uniforms
//----------------------------------------------------------------------------
uniform sampler2D Source;
//----------------------------------------------------------------------------
const vec4 threshold = vec4( 254. / 255. );
//----------------------------------------------------------------------------
void main()
{
	gl_FragColor = step( threshold, texture2D( Source, v_uv ) );
}
//----------------------------------------------------------------------------
