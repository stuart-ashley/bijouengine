//----------------------------------------------------------------------------
// attributes
//----------------------------------------------------------------------------
attribute vec2 a_position;
attribute vec2 a_uv;
//----------------------------------------------------------------------------
// uniforms
//----------------------------------------------------------------------------
uniform mat4 mvp_matrix;
//----------------------------------------------------------------------------
// varying
//----------------------------------------------------------------------------
varying vec2 v_uv;
//----------------------------------------------------------------------------
void main()
{
	gl_Position = mvp_matrix * vec4( a_position, 0., 1. );
	v_uv = a_uv;
}
//----------------------------------------------------------------------------
